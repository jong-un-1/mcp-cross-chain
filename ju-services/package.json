{
  "name": "cross-chain-dex-backend",
  "version": "3.0.0",
  "description": "Cross-Chain DEX Backend - Microservices on Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "build": "echo 'No build needed for Cloudflare Workers'",
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "development": "wrangler deploy --env development",
    "start": "wrangler dev",
    "setup-kv": "chmod +x scripts/setup-kv.sh && ./scripts/setup-kv.sh",
    "cache:status": "curl -H 'Authorization: Bearer $KEY' https://your-worker.workers.dev/v1/api/cache/status",
    "cache:clear": "curl -X POST -H 'Authorization: Bearer $KEY' https://your-worker.workers.dev/v1/api/cache/clear-all",
    "test": "npm run test:unit",
    "test:unit": "vitest run test/*.spec.ts --exclude test/integration.spec.ts test/performance.spec.ts test/security.spec.ts",
    "test:integration": "vitest run test/integration.spec.ts",
    "test:performance": "vitest run test/performance.spec.ts",
    "test:security": "vitest run test/security.spec.ts",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest watch --coverage",
    "coverage:open": "npx live-server coverage/lcov-report --port=8080",
    "cf-typegen": "wrangler types",
    "generate": "drizzle-kit generate",
    "push": "drizzle-kit push",
    "migrate": "drizzle-kit migrate",
    "migrate:local": "wrangler d1 migrations apply cross-chain-dex-db --local",
    "migrate:prod": "wrangler d1 migrations apply cross-chain-dex-db",
    "studio": "drizzle-kit studio",
    "studio:local": "cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
    "db:create": "wrangler d1 create cross-chain-dex-db",
    "db:init": "wrangler d1 execute cross-chain-dex-db --local --file=drizzle/0002_init_microservices.sql",
    "db:init:prod": "wrangler d1 execute cross-chain-dex-db --remote --file=drizzle/0002_init_microservices.sql",
    "db:query": "wrangler d1 execute cross-chain-dex-db --local",
    "db:query:prod": "wrangler d1 execute cross-chain-dex-db --command \"SELECT name FROM sqlite_master WHERE type='table';\"",
    "db:backup": "wrangler d1 export cross-chain-dex-db --output=backup.sql",
    "db:reset": "wrangler d1 execute cross-chain-dex-db --local --command='DELETE FROM sqlite_master;'",
    "verify": "./scripts/verify-config.sh",
    "setup": "cp wrangler.example.toml wrangler.toml && echo 'Please edit wrangler.toml with your configuration'"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "serverless",
    "dex",
    "ai",
    "database",
    "storage"
  ],
  "author": "Mars Liquid Protocol Team",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.47",
    "@types/node": "^24.0.8",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.18.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@cloudflare/containers": "^0.0.16",
    "@hono/zod-validator": "^0.7.0",
    "@modelcontextprotocol/sdk": "^1.13.2",
    "agents": "^0.2.1",
    "better-sqlite3": "^12.2.0",
    "cross-env": "^7.0.3",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.3",
    "nanoid": "^5.1.5",
    "viem": "^2.31.6",
    "wrangler": "^4.40.2",
    "zod": "^3.25.67"
  }
}
